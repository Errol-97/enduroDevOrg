<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <!-- This ensures the LWC can be used within Flow screens -->
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <!-- output attributes - these will be bound to Flow variables -->
            <property name="firstNameVar" type="String" role="outputOnly" label="First Name"
                description="Output value for First Name." />
            <property name="lastNameVar" type="String" role="outputOnly" label="Last Name"
                description="Output value for Last Name." />
            <property name="emailVar" type="String" role="outputOnly" label="Email"
                description="Output value for Email." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>